{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "sw.js", "use": "@vercel/static" },
    { "src": "manifest.webmanifest", "use": "@vercel/static" },
    { "src": "logo-*.png", "use": "@vercel/static" },
    { "src": "apple-touch-icon.png", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    // --- Clean sign-in routes ---
    { "src": "/signin.html", "status": 301, "headers": { "Location": "/signin" } },
    { "src": "/login", "dest": "/signin.html" },
    { "src": "/signup", "dest": "/signin.html" },
    { "src": "/signin", "dest": "/signin.html" },

    // --- Offline & 404 fallbacks ---
    { "src": "/offline", "dest": "/offline.html" },
    { "src": "/404", "dest": "/404.html" },

    // --- Default: everything else to index.html ---
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}