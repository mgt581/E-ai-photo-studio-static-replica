{
  "version": 2,
  "builds": [
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/signin", "dest": "/signin.html" },
    { "src": "/login",  "dest": "/signin.html" },
    { "src": "/signup", "dest": "/signin.html" },

    { "src": "/offline", "dest": "/offline.html" },
    { "src": "/404",     "dest": "/404.html" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
